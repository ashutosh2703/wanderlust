<%- layout('/layouts/boilerplate') %>
<body>
  <div class="row mt-3">
    <div class="col-6 offset-3">
        <h1>SignUp On Wandelust</h1>
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="">
                <label for="username" class="form-lable">Username</label>
                <input name="username" id="username" class="form-control" type="text" required />
                <div class="valid-feedback">Username looks good!</div>
              </div>
            <div class="">
                <label for="email" class="form-lable">Email</label>
                <input name="email" id="email" class="form-control" type="email" required />
                <div class="valid-feedback">email looks good!</div>
              </div>
            <div class="">
                <label for="password" class="form-lable">Password</label>
                <input name="password" id="password" class="form-control" type="password" required />
                <div class="valid-feedback">Password looks good!</div>
              </div>
              <button class="btn btn-outline-success m-3">SignUp</button>
        </form>
    </div>
  </div>
</body>