<%- layout('/layouts/boilerplate') %>
<body>
  <div class="row mt-3">
    <div class="col-6 offset-3">
        <h1>Log In On Wandelust</h1>
        <form action="/login" method="post" class="needs-validation" novalidate>
            <div class="">
                <label for="username" class="form-lable">Username</label>
                <input name="username" id="username" class="form-control" type="text" required />
                <div class="valid-feedback">Username looks good!</div>
              </div>
            <div class="">
                <label for="password" class="form-lable">Password</label>
                <input name="password" id="password" class="form-control" type="password" required />
                <div class="valid-feedback">Password looks good!</div>
              </div>
              <button class="btn btn-outline-success m-3">Log in</button>
        </form>
    </div>
  </div>
</body>